{   
    "version": 2,
    "builds": [
        {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
            "distDir": "dist/your-app-name",
            "installCommand": "npm install --legacy-peer-deps",
            "buildCommand": "npm run build -- --prod"
            }
        }
    ],
   "routes": [
    {
        "src": ".",
        "dest": "/"
    },
    {
        "src": "/home/:mode/:id",
        "dest": "/"
    }
   ] 
}